{
    "name": "@fluxmedia/react",
    "version": "0.1.0",
    "description": "React hooks and components for FluxMedia",
    "keywords": [
        "fluxmedia",
        "react",
        "media",
        "upload",
        "hooks"
    ],
    "homepage": "https://fluxmedia.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/fluxmediajs/fluxmedia.git",
        "directory": "packages/react"
    },
    "license": "MIT",
    "author": "FluxMedia Contributors",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "!dist/**/*.map"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rm -rf dist",
        "dev": "tsup --watch"
    },
    "dependencies": {
        "@fluxmedia/core": "workspace:*"
    },
    "devDependencies": {
        "@types/react": "^18.2.48",
        "react": "^18.2.0",
        "tsdown": "^0.2.1",
        "typescript": "^5.3.3"
    },
    "peerDependencies": {
        "react": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}